---
import '@fontsource-variable/manrope';
import '@fontsource/playfair-display';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Manrope Variable';
    --aw-font-serif: 'Playfair Display';
    --aw-font-heading: 'Playfair Display';

    --aw-color-primary: rgb(64 85 68);
    --aw-color-secondary: rgb(47 68 52);
    --aw-color-accent: rgb(149 117 83);

    --aw-color-text-heading: rgb(34 46 36);
    --aw-color-text-default: rgb(45 57 48);
    --aw-color-text-muted: rgb(63 74 66 / 74%);
    --aw-color-bg-page: rgb(240 242 236);

    --aw-color-bg-page-dark: rgb(30 45 35);

    ::selection {
      background-color: rgb(205 216 198);
    }
  }

  .dark {
    --aw-font-sans: 'Manrope Variable';
    --aw-font-serif: 'Playfair Display';
    --aw-font-heading: 'Playfair Display';

    --aw-color-primary: rgb(129 160 133);
    --aw-color-secondary: rgb(101 129 105);
    --aw-color-accent: rgb(183 151 111);

    --aw-color-text-heading: rgb(239 243 236);
    --aw-color-text-default: rgb(224 230 219);
    --aw-color-text-muted: rgb(192 203 191 / 76%);
    --aw-color-bg-page: rgb(30 45 35);

    ::selection {
      background-color: rgb(170 186 166);
      color: rgb(16 26 19);
    }
  }
</style>
